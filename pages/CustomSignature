                $(document).ready(function() {
                    var oppId = '{!JSENCODE($CurrentPage.parameters.parentid)}';
                    if(oppId !=null && oppId !=''){
                        result = sforce.connection.retrieve("Id,Name", "Opportunity", [oppId]);
